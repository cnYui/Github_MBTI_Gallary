# 生产环境配置模板
# 复制此文件为 .env.production 并填入实际值

# 应用基本配置
NODE_ENV=production
PORT=3001

# 应用域名和URL
APP_URL=https://your-domain.com
API_BASE_URL=https://your-domain.com/api

# CORS 配置
CORS_ORIGIN=https://your-domain.com

# 安全配置
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# 数据库配置 (如果使用)
# DATABASE_URL=postgresql://username:password@localhost:5432/mbti_gallery
# REDIS_URL=redis://localhost:6379

# 第三方API配置
# OpenAI API (用于MBTI分析)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# GitHub API (用于GitHub数据爬取)
GITHUB_TOKEN=ghp_your-github-personal-access-token

# Coze API (如果使用)
COZE_API_KEY=your-coze-api-key-here
COZE_WORKFLOW_ID=your-workflow-id-here

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 监控和分析
# SENTRY_DSN=https://your-sentry-dsn-here
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# 邮件服务 (如果需要)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# 云存储配置 (如果使用)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# CDN配置 (如果使用)
# CDN_URL=https://cdn.your-domain.com

# 性能监控
ENABLE_METRICS=true
METRICS_PORT=9090

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS 配置 (如果使用自签名证书)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem